<% layout('layout/boilerplate') -%>

  <body>
    <div class="row ">
      <div class="col-6 mx-auto ">
        <div class="list-card mt-3">
          <img src="<%=re.image.url%>" class="card-img-top " alt="..."
            style="width: 40rem;border-radius: 2rem;height: 30rem;">
          <div class="card-body mt-3 ">
            <p class="card-text">
             <%=re.owner.username%>
            </p>
            <h5 class="card-title ">
              <%=re.title%>
            </h5>
            <p class="card-text">
              <%=re.description%>
            </p>
            <p class="card-text">&#8377;<%=re.price.toLocaleString("en-IN")%></p>
            <p class="card-text">
              <%=re.loaction%>
            </p>
            <p>
              <%=re.country%>
            </p>
          </div>
        </div>
   
   <%if(current && re.owner._id.equals(current._id)){%>
      <form action="/edit/<%=re.id%>" method="get" class="r mx-auto">
        <button class="btn btn-danger px-5 me-2 mb-2" >Edit</button>
      </form>
  
      <form action="/delete/<%=re.id%>/d?_method=delete" method="post" class="r">
        <button class="btn btn-danger px-5 ms-2 mb-2">Delete</button>
      </form>
   <%}%>
    </div>
  </div>
  <hr>
  <div class="col-6 mx-auto mt-3" >
   <% if(current){%>
    <h3>Leave a Comment</h3>
    <form action="/listings/<%=re.id%>/review" method="post" class="needs-validation" novalidate>
       <label for="">Rating</label>
  <fieldset class="starability-coinFlip">
   
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
    <label for="Comment" class="form-label">Comment</label>
    <textarea name="review[comment]" id="Comment" class="form-control"  rows="10" cols="10" required></textarea >
      <div class="valid-feedback">
        Please enter the comment
      </div>
    <button class="btn btn-outline-dark mt-3">Submit</button>
  </form>
 <%}%>
  </div>
 
  <hr>
  
  <div class="row">
  <div class="col-sm-6 mb-3 mb-sm-0 mx-auto">
  <h4>All reviews</h4>
  <%for(let r of re.review){%>
    
        <div class="card mt-3 mb-3">
          <div class="card-body mx-3">
            <h5 class="card-title"><%=r.author.username%></h5>
          <p class="card-text mt-3 starability-result mb-3" data-rating="<%=r.rating%>"></p>
            <p class="card-text "><%=r.comment%></p>
           
            <form action="/listings/<%=re.id%>/review/<%=r.id%>?_method=delete" method="post" class="mt-3">
              <button class="btn btn-dark mb-2">Delete</button>
            </form>
          </div>
    
        </div>
    

  <%}%>
  
</div>
</div>
  </body>

  </html>