<% layout('layout/boilerplate') -%>

   <body>
      <h3 class="mt-3">Edit the List</h3>
      <form action="/edit/<%=re.id%>?_method=PATCH" method="post" class="mt-3 needs-validation" novalidate enctype="multipart/form-data">
         <div class="mb-1 ">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" id="title" class="form-control" placeholder="<%=re.title%>" required>
            <div class="invalid-feedback">
               Please chose the title
            </div>
         </div>

         <div class="mb-3 ">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="" id="description" class="form-control"
               required><%=re.description%></textarea>
            <div class="invalid-feedback">
               Please write a description
            </div>
         </div>
           <div class="mb-3 col-4">
            <img src="<%=originalurl%>" alt="">
           </div>
         <div class="mb-3 ">
            <label for="image" class="form-label">Upload the image</label>
            <input type="file" name="listing[image]" id="image" class="form-control">
            <div class="invalid-feedback">
               Please write a description
            </div>
         </div>
         <div class="mb-3 ">

            <label for="price" class="form-label">Price</label>
            <input type="text" name="listing[price]" class="form-control" placeholder="price" value="<%=re.price%>"
               required>

         </div>

         <div class="row">
            <div class="col-4 ">
               <label for="price" class="form-label">Location</label>
               <input type="text" class="form-control" name="listing[location]" placeholder="Karnataka"
                  value="<%=re.location%>" required>

            </div>


            <div class="col ">
               <label for="price" class="form-label">Country</label>
               <input type="text" class="form-control" name="listing[country]" placeholder="India"
                  value="<%=re.country%>" required>

            </div>
         </div>

         <button class="btn btn-danger mt-4">Submit</button>
      </form>
   </body>

   </html>